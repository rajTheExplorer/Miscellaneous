
let letters="abcdefghijklmnopqrstuvwxyz";
let symbols="!@#$%^&*";
let numbers="1234567890";
let lettersLength=Number(prompt("How many letters would you like to have in your password"))
alert(lettersLength)
let symbolsLength=Number(prompt("how many special chracters would you like"))
let numbersLength=Number(prompt("how many numbers would you like to have"))
let totalLength=lettersLength+symbolsLength+numbersLength;
let pass="";
while(pass.length<totalLength-(numbersLength+symbolsLength))
{
    pass=pass+letters[Math.floor(Math.random()*letters.length)]
}
while(pass.length<totalLength-(symbolsLength))
{
    pass=pass+numbers[Math.floor(Math.random()*numbers.length)]
}
while(pass.length<totalLength)
{
    pass=pass+symbols[Math.floor(Math.random()*symbols.length)]
}
alert(pass);
